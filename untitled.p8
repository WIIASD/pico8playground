pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
txt = "this is a text line"

p_txt = ""

cor = nil

function _inti()
end

function _update()
	if btnp(5) then 
		cor = cocreate(print_txt) 
		p_txt = ""
	end
	if cor and costatus(cor)!="dead" then
		coresume(cor)
	else
		cor = nil
	end
end

function _draw()
	cls()
	print(p_txt)
end

function print_txt()
 c_count = 1
 while c_count <= #txt do
 	yield()
		p_txt = sub(txt, 1, c_count)
		c_count += 1
 end
end
